<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
        android:id="@+id/signup_name_text"
        android:layout_width="328dp"
        android:layout_height="36dp"
        android:hint="Name"
        android:textColorHint="#e7e7e7"
        android:textStyle="italic"
        android:inputType="text"
        android:textColor="@android:color/white"

        android:paddingLeft="15dp"
        android:background="@drawable/edit_text_style"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText

        android:id="@+id/signup_email_text"
        android:layout_marginTop="10dp"
        android:layout_width="328dp"
        android:layout_height="36dp"
        android:hint="Email"
        android:textColorHint="#e7e7e7"
        android:textStyle="italic"
        android:textColor="@android:color/white"

        android:inputType="textEmailAddress"
        android:paddingLeft="15dp"
        android:background="@drawable/edit_text_style"
        android:layout_below="@+id/signup_name_text"
        android:layout_alignLeft="@+id/signup_name_text"
        android:layout_alignStart="@+id/signup_name_text"
        />




    <EditText
        android:id="@+id/signup_mobile_text"
        android:layout_marginTop="10dp"
        android:layout_width="328dp"
        android:layout_height="36dp"
        android:hint="Mobile"
        android:textColorHint="#e7e7e7"
        android:textStyle="italic"
        android:textColor="@android:color/white"

        android:inputType="phone"
        android:paddingLeft="15dp"
        android:background="@drawable/edit_text_style"
        android:layout_below="@+id/signup_email_text"
        android:layout_alignLeft="@+id/signup_email_text"
        android:layout_alignStart="@+id/signup_email_text" />

    <EditText
        android:id="@+id/signup_pwd_text"
        android:layout_marginTop="10dp"
        android:layout_width="328dp"
        android:layout_height="36dp"
        android:hint="Password"
        android:textColorHint="#e7e7e7"
        android:textStyle="italic"
        android:textColor="@android:color/white"

        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:background="@drawable/edit_text_style"
        android:layout_below="@+id/signup_mobile_text"
        android:layout_alignLeft="@+id/signup_mobile_text"
        android:layout_alignStart="@+id/signup_mobile_text" />


    <TextView
        android:id="@+id/signup_button"
        android:layout_width="328dp"
        android:layout_height="40dp"
        android:background="#66FFFFFF"
        android:text="Sign Up"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/signup_pwd_text"
        android:layout_alignRight="@+id/signup_pwd_text"
        android:layout_alignEnd="@+id/signup_pwd_text" />

    <TextView
        android:id="@+id/signup_later_button"
        android:layout_width="328dp"
        android:layout_height="40dp"
        android:background="#66FFFFFF"
        android:text="Later"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/signup_button"
        android:layout_alignLeft="@+id/signup_button"
        android:layout_alignStart="@+id/signup_button" />



    </RelativeLayout>

</ScrollView>
